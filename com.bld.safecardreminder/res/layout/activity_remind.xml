<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6699cc"
    tools:context=".RemindActivity" >

    <ListView
        android:id="@+id/listViewReminder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/activity_text_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_text_horizontal_margin"
        android:layout_marginRight="@dimen/activity_text_horizontal_margin"
        android:layout_marginTop="@dimen/activity_text_horizontal_margin"
        android:background="#6699cc"
        android:dividerHeight="10dip"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >
    </ListView>

</RelativeLayout>