<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/activity_text_horizontal_margin"
    android:layout_marginRight="@dimen/activity_text_horizontal_margin"
    android:background="@drawable/shape"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_text_vertical_margin"
    android:paddingLeft="@dimen/activity_text_horizontal_margin"
    android:paddingRight="@dimen/activity_text_horizontal_margin"
    android:paddingTop="@dimen/activity_text_vertical_margin" >

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#ffffff"
        android:text="@string/default_card_name"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textViewDesc"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#ffffff"
        android:text="@string/default_card_desc"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</LinearLayout>